<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.mainfragment.InformationFragment">

    <com.iloveher.www.ui.widget.PagerSlidingTabStrip
        android:id="@+id/mSlidingTab"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px40"
        app:pstsIndicatorColor="@android:color/holo_blue_light"
        app:selectedTabTextColor="@android:color/holo_blue_light"
        app:tabTextSize="@dimen/text_size_14"
        app:tabTextColor="@color/information_text_black"
        app:pstsUnderlineHeight="@dimen/px0.5"
        app:pstsUnderlineColor="@color/information_text_gray_light"
        app:pstsTabPaddingLeftRight="@dimen/px12"
        app:pstsIndicatorHeight="@dimen/px2"
        app:pstsDividerColor="@android:color/transparent"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/mViewPager"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/px0"
        android:layout_weight="1.0"/>

</LinearLayout>
