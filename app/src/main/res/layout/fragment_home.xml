<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:cube_ptr="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.iloveher.www.ui.fragment.HomeFragment">

    <in.srain.cube.views.ptr.PtrClassicFrameLayout
        android:id="@+id/mPtrLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        cube_ptr:ptr_duration_to_close="300"
        cube_ptr:ptr_duration_to_close_header="2000"
        cube_ptr:ptr_keep_header_when_refresh="true"
        cube_ptr:ptr_pull_to_fresh="false"
        cube_ptr:ptr_ratio_of_header_height_to_refresh="1.2"
        cube_ptr:ptr_resistance="1.7">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <!--Banner 轮播图 canLoop://控制循环与否-->
            <com.iloveher.www.library.banner.ConvenientBanner
                android:id="@+id/mBannerViewPager"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px200"
                app:canLoop="true"
                />

            <!-- TODO: Update blank fragment layout -->
            <TextView
                android:id="@+id/mCenter"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="首页内容区"
                android:textSize="26sp"/>
        </LinearLayout>

    </in.srain.cube.views.ptr.PtrClassicFrameLayout>
</LinearLayout>
